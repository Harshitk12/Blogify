<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head') %>
    <title>Blog</title>
    <style>
      img {
        margin-right: 10px;
      }

      svg {
        position: absolute;
        right: 0;
        cursor: pointer;
      }
    </style>
</head>

<body>
  <%- include('./partials/nav') %>

    <div class="container mt-4">
      <h1>
        <%= blog.title %>
      </h1>
      <% if(blog.coverImageURL.endsWith(".mp4")) {%>
        <video src="<%= blog.coverImageURL %>" style="height:400px" loop controls></video>
        <% } else {%>
          <img src="<%= blog.coverImageURL %>" style="height:400px">
          <% } %>
            <pre class="mt-3"><%= blog.body %></pre>
    </div>

    <div class="Info container mt-4" >
      <img src="<%= blog.createdBy.profileImageURL %>" width="50px" />
      <div style="font-weight: bold; display:inline;"><%=blog.createdBy.fullName %></div>
    </div>

    <div class="container mt-3">
      <h1>Comments (<%= comments.length %>)</h1>
      <% if (locals.user) { %>
        <form action="/blog/comment/<%= blog._id %>" method="post">
          <div class="mb-3" style="display: flex;">
            <input type="text" name="content" class="form-control" placeholder="Enter your comment" />
            <button class="btn btn-sm btn-primary" style="margin-left: 10px;" type="submit">Add</button>
          </div>
        </form>

        <% } %>
          <div class="mt-3" style="margin-bottom:100px">
            <% comments.forEach(comment=> { %>
              <div style=" margin-bottom:20px;position:relative;">
                <img src="<%= comment.createdBy.profileImageURL %>" width="30px" />
                <span style="font-weight: bold;">
                  <%= comment.createdBy.fullName %>
                </span>
                <% if(comment.createdBy._id==user._id) {%>
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24" color="#000000"
                    fill="none" class="deleteIcon" data-blogId="<%= blog._id %>" data-id="<%= comment._id %>">
                    <path
                      d="M19.5 5.5L18.8803 15.5251C18.7219 18.0864 18.6428 19.3671 18.0008 20.2879C17.6833 20.7431 17.2747 21.1273 16.8007 21.416C15.8421 22 14.559 22 11.9927 22C9.42312 22 8.1383 22 7.17905 21.4149C6.7048 21.1257 6.296 20.7408 5.97868 20.2848C5.33688 19.3626 5.25945 18.0801 5.10461 15.5152L4.5 5.5"
                      stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
                    <path
                      d="M3 5.5H21M16.0557 5.5L15.3731 4.09173C14.9196 3.15626 14.6928 2.68852 14.3017 2.39681C14.215 2.3321 14.1231 2.27454 14.027 2.2247C13.5939 2 13.0741 2 12.0345 2C10.9688 2 10.436 2 9.99568 2.23412C9.8981 2.28601 9.80498 2.3459 9.71729 2.41317C9.32164 2.7167 9.10063 3.20155 8.65861 4.17126L8.05292 5.5"
                      stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
                    <path d="M9.5 16.5L9.5 10.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
                    <path d="M14.5 16.5L14.5 10.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
                  </svg>
                  <% } %>
                    <div>
                      <pre style="margin-bottom: 2px;"><%= comment.content %></pre>
                    </div>
                    <div style="height: 2px;background-color:gray"></div>
              </div>
              <% }) %>
          </div>
    </div>

    <%- include('./partials/scripts') %>

    <script>
      
        document.querySelectorAll('.deleteIcon').forEach(icon => {
          icon.addEventListener('click', async (e) => {
            
            const commentId = e.target.dataset.id;
            const blogId=e.target.dataset.blogId;
            const confirmation = confirm('Are you sure you want to delete this comment?');
            if (!confirmation) return;
      
            try {
              const response = await fetch(`/blog/${blogId}/comment/${commentId}`, {
                method: 'DELETE',
              });
        
              if (response.ok) {
                
                location.reload(); 
              } else {
                alert('Error deleting comment');
              }
            } catch (error) {
              console.error('Error:', error);
              alert('Failed to delete comment');
            }
          });
        });

    </script>
      

</body>

</html>