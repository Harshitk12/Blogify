<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
    <style>
      body{
      }
      .card{
        height: 250px; width:349px; 
        border: 2px solid black;
        margin: 20px;
        display:inline-block;
        box-shadow:  5px 10px 10px rgb(34, 34, 34);
        border-radius: 10px;
      }
      video{
        border-top-left-radius:10px;
        border-top-right-radius: 10px;
      }
      img{
        border-top-left-radius:10px;
        border-top-right-radius: 10px;
      }
      .card:hover{
        cursor:pointer;
        opacity: 0.9;
      }
      .title{
        height:52px;
        display:flex;
        justify-content:center;
        align-items:center;
        font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      }
    </style>
  </head>
  <body>
    <%- include('./partials/nav') %>
    
      <div class="container" style="display: inline-block;margin-left:260px;margin-top:60px">
        
        <% blogs.forEach(blog => { %>
          <div class="card" onclick="redirectToBlogPage('/blog/<%= blog._id %>')">
            <div style="height:195px;width:350px">
              <% if(blog.coverImageURL.endsWith(".mp4")) {%>
              <video src="<%= blog.coverImageURL %>"  style="height:195px" loop muted></video>
              <% }
                else {%>
                <img src="<%= blog.coverImageURL %>"  style="height:195px" >
                <% } %>
            </div>  
            <div class="title">
              <h5 ><%= blog.title %></h5>
            </div>
          </div>
        <% }) %>
      </div>

      <%- include('./partials/scripts') %>
      
    <script>
      const videos = document.querySelectorAll('video');

      function redirectToBlogPage(path){
        window.location.href = path;
      }

      videos.forEach(video => {
        video.addEventListener('mouseenter', () => {
          video.play(); 
        });
      
        video.addEventListener('mouseleave', () => {
          video.pause(); 
          video.currentTime = 0; 
        });
      });
    </script>
  </body>
</html>
