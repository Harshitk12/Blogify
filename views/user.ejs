<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>User Info</title>
    <style>
        body{
            box-sizing: border-box;
        }
        .usercontainer{
            margin-top: 55px;
            margin-left: 15vw;
            display: flex;
            height: 350px;
            align-items: center;
            border: 2px solid black;
        }
        .userImg{
            margin: 30px;
            margin-left: 5vw;
            margin-right: 5vw;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-between;
        }
        .file-label{
            margin-top: 18px;
            height: 30px;
            width: 110px;
            border: 2px solid black;
            background-color: rgba(0, 0, 0, 0.863);
            border-radius: 5px;
            color: white;
            cursor: pointer;
            font-family: 'Times New Roman', Times, serif;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .userInfo{
            margin-top:0px;
            height: 100%;
            padding-top: 60px;
            position:relative;
        }
        .userInfo > *{
            display: flex;
            margin-bottom: 1px;
            font-size: 25px;
        }
        .info{
            width: 40vw;
            border-radius: 4px;
            border: 2px solid rgba(0, 0, 0, 0.203);
            height: 27px;
            font-family: 'Times New Roman', Times, serif;
            font-weight: bold;
            color: black;
            font-size: 20px;
        }
        .info::placeholder{
            font-family: 'Times New Roman', Times, serif;
            font-weight: bold;
            color: black;
            font-size: 20px;
        }
        .editButton{
            margin-top: 22px;
            margin-bottom: 0px;
            font-size: 15px;
            justify-content: center;
            align-items: center;
            position: absolute;
            right: 2px;
        }
        #pfp {
            opacity: 0;
            position: absolute;
            width: 0;
            height: 0;
          }
        .pfp{
            border: 2px solid black;
            border-radius: 50%;
            height: 200px;
          }

          .card{
            height: 300px; width:415px; 
            border: 2px solid black;
            margin: 0.25vw;
            display:inline-block;
            border-radius: 10px;
          }
          video{
            border-top-left-radius:10px;
            border-top-right-radius: 10px;
            width: 412px;
          }
          .coverimg{
            border-top-left-radius:10px;
            border-top-right-radius: 10px;
            width: 414px;
          }
          .card:hover{
            cursor:pointer;
            opacity: 0.9;
          }
          .title{
            height:52px;
            display:flex;
            justify-content:center;
            align-items:center;
            font-family:'Times New Roman', Times, serif;
          }
    </style> 
</head>
<body>
    <%- include('./partials/nav') %>
    
    
    <form class="usercontainer" action="/user/info/<%= user._id %>" method="post" enctype="multipart/form-data">
            <div class="userImg">
                <img class="pfp" src="<%= user.profileImageURL %>" width="200px" />
                <div>
                    <label  for="pfp" class="file-label">Choose Image</label>
                    <input class="info" type="file" id="pfp" name="profileImageURL">
                </div>
            </div>

            <div class="userInfo"> 
            <div class=" name">
                <pre>Name :         </pre>
                <input class="info" type="text" name="fullName" value="<%= user.fullName %>">
            </div>
            <div class=" email">
                <pre>Email :        </pre>
                <input class="info" type="text" name="email" value="<%= user.email %>">
            </div>
            <div class=" age">
                <pre>Age :          </pre>
                <input class="info" type="text" name="age" value="<%= user.age %>">
            </div>
            <div class=" profession">
                <pre>Profession :   </pre>
                <input class="info" type="text" name="profession" value="<%= user.profession %>">
            </div>
            <div>
                <button class="file-label editButton">Edit</button>
            </div>
        </div> 
    </form>
    <h1 style="margin-left: 16vw;margin-top:20px;font-weight:500">BLOGS BY - <%= user.fullName  %></h1>
    <div style="margin-left: 15vw;height: 2px;background-color:black;"></div>
    <div class="creator_Blogs" style="display: inline-block;margin-left:15.5vw;margin-top:10px">
        <% blogs.forEach(blog => { %>
            <div class="card" onclick="redirectToBlogPage('/blog/<%= blog._id %>')">
              <div style="height:232px;width:415px">
                <% if(blog.coverImageURL.endsWith(".mp4")) {%>
                <video src="<%= blog.coverImageURL %>"  style="height:232px" loop muted></video>
                <% }
                  else {%>
                  <img class="coverimg" src="<%= blog.coverImageURL %>"  style="height:232px" >
                  <% } %>
              </div>  
              <div class="title">
                <h5 ><%= blog.title %></h5>
              </div>
            </div>
          <% }) %>
    </div>
        
    


<script>
    const editButton=document.querySelector('.editButton');
    const info=document.querySelectorAll('.info');
    info.forEach(input => (input.disabled = true));

editButton.addEventListener('click', (event) => {
    const areDisabled = info[0].disabled;

    if (areDisabled) {
        event.preventDefault(); 
        info.forEach(input => (input.disabled = false));
        editButton.innerText = "Submit";
        editButton.type = "submit"; 
    }
});

function redirectToBlogPage(path){
    window.location.href = path;
  }

  const videos = document.querySelectorAll('video');
  videos.forEach(video => {
    video.addEventListener('mouseenter', () => {
      video.play(); 
    });
  
    video.addEventListener('mouseleave', () => {
      video.pause(); 
      video.currentTime = 0; 
    });
  });

  
</script> 
</body>
</html>