<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
    <title>User Info</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(to bottom, #1e1e1e, #2b2b2b);
            color: #fff;
        }

        .usercontainer {
            margin-top: 60px;
            margin-left: 15.5vw;
            display: flex;
            align-items: center;
            padding: 30px;
            border-radius: 15px;
            background-color: #333;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            gap: 20px;
            height: 380px;
        }

        .userImg {
            text-align: center;
        }

        .pfp {
            border: 5px solid #FFD93B;
            border-radius: 50%;
            width: 200px;
            height: 200px;
            object-fit: cover;
            margin-bottom: 20px;
            margin-top: 33px;
        }

        .file-label {
            margin-top: 19px;
            background: linear-gradient(to right, #d5cf25, #e5e9f0);
            color: #333;
            border-radius: 25px;
            padding: 5px 15px;
            font-size: 16px;
            cursor: pointer;
            transition: 0.3s ease;
        }

        .file-label:hover {
            background-color: #ffcc00;
        }

        .userInfo {
            width: 100%;
        }

        .userInfo > div {
            display: flex;
            margin-bottom: 15px;
        }

        .userInfo pre {
            width: 120px;
            height: 50px;
            font-size: 18px;
            color: #FFD93B;
            margin-bottom: 0px;
            display: flex;
            align-items: center;
        }

        .info {
            flex: 1;
            padding: 10px;
            border: 2px solid #555;
            background-color: #444;
            color: #fff;
            border-radius: 8px;
            font-size: 16px;
        }

        .info:disabled {
            opacity: 0.7;
            background-color: #3a3a3a;
        }

        .editButton {
            margin-top: 10px;
            padding: 8px 20px;
            background: linear-gradient(to right, #d5cf25, #e5e9f0);
            border: none;
            border-radius: 25px;
            font-size: 16px;
            color: #333;
            cursor: pointer;
            transition: 0.3s ease;
        }

        .editButton:hover {
            background-color: #ffcc00;
        }

        h1 {
            margin-left: 16vw;
            margin-top: 30px;
            font-size: 30px;
            font-weight: 600;
            color: #FFD93B;
        }

        .creator_Blogs {
            margin: 20px 0 0 16vw;
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
        }

        .card {
            width: 300px;
            background-color: #444;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            cursor: pointer;
            transition: 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.4);
        }

        video, .coverimg {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .title {
            padding: 15px;
            text-align: center;
            font-size: 18px;
            background: linear-gradient(to right, #d5cf25, #e5e9f0);
            color: #333;
        }
        .noBlogs{
          margin-left: 15vw;
          height: 237px;
          color:#FFD93B;
          display: flex;
          justify-content: center;
          align-items: center;
          font-weight: bold;
          font-size: 40px;
          font-family: 'Times New Roman', Times, serif;
        }
    </style>
</head>

<body>
    <%- include('./partials/nav') %>
    <form class="usercontainer" action="/user/info/<%= user._id %>" method="post" enctype="multipart/form-data">
        <div class="userImg">
            <img class="pfp" src="<%= user.profileImageURL %>" alt="">
            <label for="pfp" class="file-label">Choose Image</label>
            <input type="file" class="info" id="pfp" name="profileImageURL" style="display: none;" disabled>
        </div>
        <div class="userInfo">
            <div>
                <pre>Name:</pre>
                <input class="info" type="text" name="fullName" value="<%= user.fullName %>" disabled>
            </div>
            <div>
                <pre>Email:</pre>
                <input class="info" type="email" name="email" value="<%= user.email %>" disabled>
            </div>
            <div>
                <pre>Age:</pre>
                <input class="info" type="number" name="age" value="<%= user.age %>" disabled>
            </div>
            <div>
                <pre>Profession:</pre>
                <input class="info" type="text" name="profession" value="<%= user.profession %>" disabled>
            </div>
            <button class="editButton" type="button">Edit</button>
        </div>
    </form>

    <% if(locals.blogs.length!==0) {%>
      <h1>BLOGS BY - <%= user.fullName %></h1>
    <div class="creator_Blogs">
        <% blogs.forEach(blog => { %>
        <div class="card" onclick="redirectToBlogPage('/blog/<%= blog._id %>')">
            <% if (blog.coverImageURL.endsWith('.mp4')) { %>
            <video src="<%= blog.coverImageURL %>" loop muted></video>
            <% } else { %>
            <img class="coverimg" src="<%= blog.coverImageURL %>" alt="Blog Cover">
            <% } %>
            <div class="title"><%= blog.title %></div>
        </div>
        <% }) }%>
    <% if(locals.blogs.length===0) {%>
      <p class="noBlogs">You Have No Blogs</p>
      <% } %>
    </div>
    <script>
        const editButton = document.querySelector('.editButton');
        const infoInputs = document.querySelectorAll('.info');

        editButton.addEventListener('click', (event) => {
            if (editButton.textContent === 'Edit') {
                event.preventDefault();
                infoInputs.forEach(input => input.disabled = false);
                editButton.textContent = 'Submit';
                editButton.type = 'submit';
            }
        });


        const videos = document.querySelectorAll('video');
        videos.forEach(video => {
          video.addEventListener('mouseenter', () => {
            video.play(); 
          });
        
          video.addEventListener('mouseleave', () => {
            video.pause(); 
            video.currentTime = 0; 
          });
        });

        function redirectToBlogPage(path) {
            window.location.href = path;
        }
    </script>
</body>

</html>
